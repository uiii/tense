{
	"$schema": "http://json-schema.org/schema#",

	"type": "object",

	"properties": {
		"tmpDir": {
			"type": "string",
			"minLength": 1
		},

		"db": {
			"type": "object",
			"properties": {
				"host": { "type": "string" },
				"port": { "type": "integer" },
				"user": { "type": "string" },
				"pass": { "type": "string" },
				"name": { "type": "string" }
			},
			"required": [
				"host",
				"port",
				"user",
				"pass",
				"name"
			]
		},

		"testTags": {
			"type": "array",
			"items": {
				"type": "string",
				"minLength": 1
			},
			"minItems": 1
		},

		"copySources": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"destination": {
						"type": "string",
						"minLength": 1
					},
					"source": {
						"oneOf": [
							{
								"type": "string",
								"minLength": 1
							},
							{
								"type": "array",
								"items": {
									"type": "string",
									"minLength": 1
								},
								"minItems": 1
							}
						]
					}
				},
				"required": [
					"destination",
					"source"
				]
			}
		},

		"beforeCmd": {
			"type": "string"
		},

		"testCmd": {
			"type": "string"
		},

		"pause": {
			"type": "string",
			"enum": ["never", "onFailure", "always"]
		}
	}
}